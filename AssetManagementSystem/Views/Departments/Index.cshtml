@model IEnumerable<AssetManagementSystem.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Departments</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <p class="pull-right">
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.dep_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var department in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => department.dep_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => department.IsActive)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new {id = department.Id}) |
                                @Html.ActionLink("Details", "Details", new {id = department.Id}) |
                                @Html.ActionLink("Delete", "Delete", new {id = department.Id})
                            </td>
                        </tr>
                    }
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.dep_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
</div>
   

