@model IEnumerable<AssetManagementSystem.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Employee</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <p class="pull-right">
                @Html.ActionLink("Create New", "Create")
            </p>
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => employee.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => employee.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => employee.IsActive)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = employee.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = employee.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = employee.Id })
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>

                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>
